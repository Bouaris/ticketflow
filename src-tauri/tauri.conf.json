{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ticketflow",
  "version": "2.0.0",
  "identifier": "com.ticketflow.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Ticketflow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "font-src": "'self' data:",
        "connect-src": "ipc: http://ipc.localhost https://api.groq.com https://generativelanguage.googleapis.com https://api.openai.com",
        "object-src": "'none'",
        "base-uri": "'self'"
      },
      "devCsp": {
        "default-src": "'self' http://localhost:* ws://localhost:*",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' http://localhost:*",
        "style-src": "'self' 'unsafe-inline' http://localhost:*",
        "img-src": "'self' asset: http://asset.localhost blob: data: http://localhost:*",
        "font-src": "'self' data: http://localhost:*",
        "connect-src": "ipc: http://ipc.localhost http://localhost:* ws://localhost:* https://api.groq.com https://generativelanguage.googleapis.com https://api.openai.com",
        "object-src": "'none'",
        "base-uri": "'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZEOTkzREIwNEM4OEExN0QKUldSOW9ZaE1zRDJaYmVrRmtTdWFaNUpUNlZNRzAwaDMrVjZkUXVxZG4yN2lWTHNDaHhzV1FDSisK",
      "endpoints": [
        "https://github.com/Bouaris/ticketflow/releases/latest/download/latest.json"
      ]
    }
  }
}
